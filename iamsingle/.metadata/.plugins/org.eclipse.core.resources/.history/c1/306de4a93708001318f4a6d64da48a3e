package shaotian.android.iamsingle.test;

import static org.junit.Assert.*;

import java.lang.reflect.Constructor;
import java.lang.reflect.InvocationTargetException;

import junit.framework.TestCase;

import org.junit.Test;

import com.google.android.gms.maps.model.Marker;

import shaotian.android.iamsingle.UIShared.MapMarkerManager;
import shaotian.android.iamsingle.UIShared.MapMarkerManager.TimedMarker;
import shaotian.android.iamsingle.UIShared.SharedUtil;

public class UtilsTest extends TestCase{

	
	
	
	public void testReflectCtor() throws IllegalArgumentException, InstantiationException, IllegalAccessException, InvocationTargetException {

		Constructor c=SharedUtil.getClassConstructor(String.class, new Class[]{String.class});
		TimedMarker inst=(TimedMarker) c.newInstance(null);
		assertTrue(inst!=null);
	}
	
	public void testReflectCtor2() throws IllegalArgumentException, InstantiationException, IllegalAccessException, InvocationTargetException {

		Constructor c=SharedUtil.getClassConstructor(MapMarkerManager.TimedMarker.class, new Class[]{Marker.class});
		TimedMarker inst=(TimedMarker) c.newInstance(null);
		assertTrue(inst!=null);
	}

}
